<%- include("../partials/adminHeader") %>

    <style>
        .page-number-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .page-number-container .page-item {
            margin: 0 5px;
        }
    </style>
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Products</h2>

        </div>

    </div>
   

    <div class="right mt-5">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col"><b>Product name</b></th>
                    <th scope="col"><b>Category</b></th>
                    <th scope="col"><b>Sale Price</b></th>
                    <th scope="col"><b>Action</b></th>
                    <th scope="col"><b>Edit</b></th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < products.length; i++) { %>
                    <tr>
                        <td>
                            <%= products[i].productName %>
                        </td>

                        <td>
                            <% for(let j=0; j < products[i].category.length; j++) { %>
                                <%= products[i].category[j].name %><br> <!-- Display each category name -->
                                    <% } %>
                        </td>
                        <td>â‚¹<%= products[i].salePrice %>
                        </td>

                        <td>
                            <% if (products[i].isBlocked===false) { %>
                                <button class="btn btn-danger" style="width: 80px;">
                                    <a href="/admin/blockProduct?id=<%= products[i]._id %>" class="text-white"
                                        style="text-decoration: none;">Block</a>
                                </button>
                                <% } else { %>
                                    <button class="btn btn-success" style="width: 80px;">
                                        <a href="/admin/unBlockProduct?id=<%= products[i]._id %>" class="text-white"
                                            style="text-decoration: none;">Unblock</a>
                                    </button>
                                    <% } %>
                        </td>
                        <td>
                            <button class="btn btn-info" style="width: 80px;">
                                <a href="/admin/editProduct?id=<%= products[i]._id %>" class="text-white"
                                    style="text-decoration: none;">Edit</a>
                            </button>
                        </td>
                    </tr>
                    <% } %>
            </tbody>

        </table>
    </div>


    </div> <!-- card-body end// -->
    </div> <!-- card end// -->

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <% if (currentPage> 1) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                </li>
                <% } %>
                    <li class="page-item">
                        <div class="page-number-container">
                            <% for (let i=1; i <=totalPages; i++) { %>
                                <% if (i===currentPage) { %>
                                    <span class="page-item active">
                                        <a class="page-link" href="#">
                                            <%= i %>
                                        </a>
                                    </span>
                                    <% } else { %>
                                        <span class="page-item">
                                            <a class="page-link" href="?page=<%= i %>">
                                                <%= i %>
                                            </a>
                                        </span>
                                        <% } %>
                                            <% } %>
                        </div>
                    </li>
                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                        </li>
                        <% } %>
        </ul>
    </nav>

    <%- include("../partials/adminFooter") %>


