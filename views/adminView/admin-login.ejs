<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>ArmorHead</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="admin-assets/imgs/logo-only.png">
    <!-- Template CSS -->
    <link href="/admin-assets/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <main>
        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-4">Login</h4>
                    <form id="loginForm" method="post" action="/admin/login">
                        <div class="mb-3">
                            <input id="email" class="form-control" name="email" placeholder="Enter email" type="text" style="border: 1px solid #ced4da;">
                            <span id="emailError" class="text-danger"></span> <!-- Validation message for email -->
                        </div>
                        <div class="mb-3">
                            <input id="password" class="form-control" name="password" placeholder="Enter password" type="password" style="border: 1px solid #ced4da;">
                            <span id="passwordError" class="text-danger"></span> <!-- Validation message for password -->
                        </div>
                        <div class="mb-3">
                            <a href="#" class="float-end font-sm text-muted">Forgot password?</a>
                            <label class="form-check">
                                <input type="checkbox" class="form-check-input">
                                <span class="form-check-label">Remember</span>
                            </label>
                        </div>
                        <div class="mb-4">
                            <button id="loginBtn" type="submit" class="btn btn-primary w-100">Login</button>
                        </div>
                    </form>

                    <p class="text-center small text-muted mb-15">or sign up with</p>
                    <div class="d-grid gap-3 mb-4">
                        <a href="#" class="btn w-100 btn-light font-sm">
                            <!-- Google Icon (example) -->
                            <svg aria-hidden="true" class="icon-svg" width="20" height="20" viewBox="0 0 20 20">
                                <path d="M16.51 8H8.98v3h4.3c-.18 1-.74 1.48-1.6 2.04v2.01h2.6a7.8 7.8 0 002.38-5.88c0-.57-.05-.66-.15-1.18z" fill="#4285F4"></path>
                                <path d="M8.98 17c2.16 0 3.97-.72 5.3-1.94l-2.6-2a4.8 4.8 0 01-7.18-2.54H1.83v2.07A8 8 0 008.98 17z" fill="#34A853"></path>
                                <path d="M4.5 10.52 a4.8 4.8 a4 4.8 .8 4.8  a4 0 .54"></path>
                            </svg> Sign in using Google
                        </a>
                    </div>
                    <p class="text-center mb-4">Don't have an account? <a href="/signup">Sign up</a></p>
                </div>
            </div>
        </section>
        <footer class="main-footer text-center">
            <p class="font-xs">
                <script>
                    document.write(new Date().getFullYear())
                </script> Â© Evara - HTML Ecommerce Template.
            </p>
            <p class="font-xs mb-30">All rights reserved</p>
        </footer>
    </main>
    
    <script src="/admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/admin-assets/js/main.js"></script>
    
    <script>
    const email = document.getElementById("email");
    const emailError = document.getElementById("emailError");
    const password = document.getElementById("password");
    const passwordError = document.getElementById("passwordError");
    const loginForm = document.getElementById("loginForm");

    function isEmailValid(email) {
        const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return regex.test(email);
    }

    function isPasswordValid(password) {
        const hasCapital = /[A-Z]/.test(password);
        const hasCharacter = /[a-zA-Z]/.test(password);
        const hasDigit = /[0-9]/.test(password);
        const hasSymbol = /[!@#\$%\^&\*]/.test(password); // Check for at least one symbol
        return hasCapital && hasCharacter && hasDigit && hasSymbol;
    }

    function validateLogin() {
        const emailValue = email.value.trim();
        const passwordValue = password.value.trim();

        // Validate email
        if (emailValue === "") {
            emailError.textContent = "Email is required.";
        } else if (!isEmailValid(emailValue)) {
            emailError.textContent = "Invalid email format.";
        } else {
            emailError.textContent = "";
        }

        // Validate password
        if (passwordValue === "") {
            passwordError.textContent = "Password is required.";
        } else if (!isPasswordValid(passwordValue)) {
            passwordError.textContent = "Password must contain at least one capital letter, one letter, one number, and one symbol (#, $, %, @, &, *).";
        } else {
            passwordError.textContent = "";
        }

        return emailError.textContent === "" && passwordError.textContent === "";
    }

    email.addEventListener("input", validateLogin);
    password.addEventListener("input", validateLogin);

    loginForm.addEventListener("submit", function (e) {
        if (!validateLogin()) {
            e.preventDefault(); // Prevent form submission if validation fails
        }
    });
    </script>
</body>
</html>
