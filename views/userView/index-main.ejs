        </div>
      </div>
      <div class="row">
        <div class="col-xl-12">
          <div class="product-tab-content">
            <div class="tab-content">
              <div class="tab-pane fade show active">
                <div class="products">
                  <% for (let i = 0; i < products.length; i++) { %> <% const
                  product = products[i]; %>

                  <div
                    class="pro-item"
                    style="
                      width: calc(25% - 15px); /* Reduced width */
                      margin-right: 15px; /* Reduced margin */
                      float: left;
                    "
                  >
                    <div class="product-wrapper mb-30">
                      <!-- Reduced bottom margin -->
                      <div class="product-img mb-15">
                        <!-- Reduced image margin -->
                        <img
                          src="/uploads/product-images/<%= product.productImage[1] %>"
                          alt="<%= product.productName %>"
                          style="width: 100%; height: auto"
                        />
                        <div class="sale-tag">
                          <% if (product.isNew) { %>
                          <span class="new">new</span>
                          <% } %> <% if (product.isOnSale) { %>
                          <span class="sale">sale</span>
                          <% } %>
                        </div>
                      </div>

                      <div class="product-content">
                        <div class="pro-cat mb-5">
                          <!-- Reduced category margin -->
                          <% if (product.categories &&
                          product.categories.length) { %> <% for (let j = 0; j <
                          product.categories.length; j++) { %> <% const category
                          = product.categories[j]; %>
                          <span><%= category.name %></span>
                          <% } %> <% } %>
                        </div>
                        <h4>
                          <span><%= product.productName %></span>
                        </h4>
                        <div class="product-meta">
                          <div class="pro-price">
                            <span><%= product.salePrice %></span>
                            <% if (product.regularPrice) { %>
                            <span class="old-price"
                              ><%= product.regularPrice %></span
                            >
                            <% } %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% } %>
                </div>
