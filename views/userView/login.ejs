<script>
  // Real-time validation for email input
  function validateEmail() {
    const email = document.getElementById("email").value;
    const emailError = document.getElementById("email-error");

    const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/; // Email pattern

    if (!emailPattern.test(email)) {
      emailError.innerHTML = "Invalid email format";
      return false;
    } else {
      emailError.innerHTML = "";
      return true;
    }
  }

  // Real-time validation for password input
  function validatePassword() {
    const password = document.getElementById("password").value;
    const passwordError = document.getElementById("password-error");
    var minLength = 8;

    // Password validation pattern
    if (
      password.length < minLength ||
      !/(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{6,}/.test(password)
    ) {
      passwordError.innerHTML = `Password must be at least ${minLength} characters long. Also password should be at least 6 characters long and contain at least one digit, one uppercase letter, one lowercase letter, and one special character.`;
      return false;
    } else {
      passwordError.innerHTML = "";
      return true;
    }
  }

  $(document).ready(function () {
    $("#login-form").on("submit", function (e) {
      e.preventDefault(); // Prevent normal form submission

      // Check both validations before submitting
      const isEmailValid = validateEmail();
      const isPasswordValid = validatePassword();

      if (!isEmailValid || !isPasswordValid) {
        // Show error toast and prevent AJAX request
        Toastify({
          text: "Please correct the errors before submitting.",
          duration: 3000,
          gravity: "top",
          position: "center",
          backgroundColor: "orange",
        }).showToast();
        return; // Do not proceed with form submission
      }

      // If validations pass, proceed with AJAX submission
      const email = $("#email").val();
      const password = $("#password").val();

      $.ajax({
        type: "POST",
        url: "/login",
        data: { email, password },
        success: function (response) {
          if (response.message === "Login successful") {
            Toastify({
              text: "Login successful!",
              duration: 1000,
              gravity: "top",
              position: "center",
              backgroundColor: "green",
            }).showToast();

            // Redirect after a short delay
            setTimeout(() => {
              window.location.href = "/";
            }, 1000);
          } else if (response.message === "Failed to send OTP") {
            Toastify({
              text: response.message,
              duration: 3000,
              gravity: "top",
              position: "center",
              backgroundColor: "red",
            }).showToast();
          } else {
            Toastify({
              text: response.message,
              duration: 3000,
              gravity: "top",
              position: "center",
              backgroundColor: "red",
            }).showToast();
          }
        },
        error: function (xhr) {
          const errorMessage = xhr.responseJSON.message;
          Toastify({
            text: errorMessage,
            duration: 3000,
            gravity: "top",
            position: "center",
            backgroundColor: "red",
          }).showToast();

          if (xhr.status === 401) {
            $("#email-error").text("Invalid email or password.");
          }
        },
      });
    });
  });
</script>
