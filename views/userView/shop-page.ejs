<script>
  $(document).ready(function () {
    $("#slider-range").slider({
      range: true,
      min: 0,
      max: 500,
      values: [75, 300],
      slide: function (event, ui) {
        $("#amount").val("$" + ui.values[0] + " - $" + ui.values[1]);
      },
    });
    $("#amount").val(
      "$" +
        $("#slider-range").slider("values", 0) +
        " - $" +
        $("#slider-range").slider("values", 1)
    );
  });
</script>

<script>
  const searchForm = document.getElementById("searchForm");
  const searchInput = document.getElementById("searchInput");

  searchForm.addEventListener("submit", async (event) => {
    event.preventDefault(); // Prevent the default form submission behavior

    const searchQuery = searchInput.value.trim(); // Get the search query from the input field

    try {
      const response = await fetch(
        `/search-product?query=${encodeURIComponent(searchQuery)}`
      );

      if (response.ok) {
        const [products, categories] = await response.json();
        // Handle the fetched products and categories data
        displayProducts(products);
        displayCategories(categories);
      } else {
        console.error("Error searching for products:", response.status);
      }
    } catch (error) {
      console.error("Error searching for products:", error);
    }
  });

  // Function to display the fetched products
  function displayProducts(products) {
    const tabContent = document.querySelector(".tab-content");
    const tabPane = tabContent.querySelector(".tab-pane.active");
    const productList = tabPane.querySelector(".row");

    // Clear the previous products
    productList.innerHTML = "";

    if (products.length === 0) {
      productList.innerHTML = "<p>No products found.</p>";
    } else {
      let productHTML = "";

      for (let i = 0; i < products.length; i++) {
        const product = products[i];
        const productItem = `
        <div class="col-xl-4 col-lg-6 col-md-6">
          <div class="product-wrapper mb-50">
            <div class="product-img mb-25">
              <a href="/productDetails/${product._id}">
                <img src="/uploads/product-images/${
                  product.productImage[1]
                }" alt="${product.productName}" />
              </a>
              
            </div>
            <div class="product-content pr-0">
              <h4><a href="/productDetails/${product._id}">${
          product.productName
        }</a></h4>
              <div class="product-meta">
                <div class="pro-price">
                  <span>₹${product.salePrice}</span>
                  ₹${
                    product.regularPrice
                      ? `<span class="old-price">${product.regularPrice}</span>`
                      : ""
                  }
                </div>
              </div>
            </div>
          </div>
        </div>
      `;
        productHTML += productItem;
      }

      productList.innerHTML = productHTML;
    }
  }
</script>

