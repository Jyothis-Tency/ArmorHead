            <div
              class="tab-pane fade show active"
              id="home"
              role="tabpanel"
              aria-labelledby="home-tab"
            >
              <div class="row">
                <% for (let i = 0; i < products.length; i++) { %> <% const
                product = products[i]; %>
                <div class="col-xl-4 col-lg-6 col-md-6">
                  <div class="product-wrapper mb-50">
                    <div class="product-img mb-25">
                      <a href="/productDetails/<%= product._id %>">
                        <img
                          src="/uploads/product-images/<%= product.productImage[0] %>"
                          alt="<%= product.productName %>"
                        />
                        <input
                          type="hidden"
                          id="productId"
                          value="<%= product._id %>"
                        />
                      </a>
                      <!-- <div class="product-action text-center"> <a href="#" title="Shopping Cart" ><i class="flaticon-shopping-cart"></i ></a> <a href="#" title="Quick View" ><i class="flaticon-eye"></i ></a> <a href="#" data-toggle="tooltip" data-placement="right" title="Compare" ><i class="flaticon-compare"></i ></a> </div> -->
                    </div>
                    <div class="product-content pr-0">
                      <h4>
                        <a href="/productDetails/<%= product._id %>"
                          ><%= product.productName %></a
                        >
                      </h4>
                      <div class="product-meta">
                        <div class="pro-price">
                          <% if (product.totalQuantity === 0) { %>
                          <span style="font-size: larger; color: red"
                            >Out of stock!!!!</span
                          >
                          <% } else { %>
                          <span
                            style="
                              font-size: larger;
                              font-weight: bold;
                              color: goldenrod;
                            "
                            >₹<%= product.salePrice %></span
                          >
                          <% if (product.regularPrice) { %>
                          <span class="old-price"
                            >₹<%= product.regularPrice %></span
                          >
                          <% } %> <% } %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
            <div
              class="tab-pane fade"
              id="profile"
              role="tabpanel"
              aria-labelledby="profile-tab"
            ></div>
          </div>

          <div class="pagination" style="text-align: center; margin-top: 20px">
            <ul
              style="
                padding: 0;
                list-style: none;
                display: inline-flex;
                align-items: center;
                justify-content: center;
              "
            >
              <% if (currentPage > 1) { %>
              <li style="margin-right: 10px">
                <a
                  href="/shopPage?page=<%= currentPage - 1 %>&sort=<%= sort %>"
                  style="
                    text-decoration: none;
                    border: 1px solid #ddd;
                    padding: 5px 10px;
                    border-radius: 5px;
                    background-color: #fff;
                  "
                >
                  <i class="fas fa-angle-double-left" style="color: #333"></i>
                </a>
              </li>
              <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
              <li
                style="margin-right: 10px; <%= i === currentPage ? 'font-weight: bold;' : '' %>"
