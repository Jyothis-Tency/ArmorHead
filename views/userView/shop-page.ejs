    <div class="container">
      <div class="row">
        <div class="col-xl-9 col-lg-8">
          <div class="row mb-10">
            <div class="col-xl-5 col-lg-6 col-md-6">
              <div class="product-showing mb-40">
                <p>Showing <%= productLength %> of <%= count %> results</p>
              </div>
            </div>
            <div class="col-xl-7 col-lg-6 col-md-6">
              <div
                class="shop-tab f-right"
                style="display: flex; align-items: center"
              >
                <ul
                  class="nav text-center"
                  id="myTab"
                  role="tablist"
                  style="margin-right: 10px"
                >
                  <li class="nav-item">
                    <!-- <h3 class="shop-title" style="margin-top: 10px;">Search by</h3> -->
                  </li>
                  <li class="nav-item">
                    <form
                      id="searchForm"
                      style="display: flex; align-items: center"
                    >
                      <input
                        type="text"
                        id="searchInput"
                        placeholder="Your keyword..."
                        style="
                          padding: 8px;
                          border: 1px solid #ccc;
                          border-radius: 4px 0 0 4px;
                          outline: none;
                        "
                      />
                      <button
                        type="submit"
                        style="
                          height: 37px;
                          background-color: #007bff;
                          color: white;
                          border: none;
                          border-radius: 0 4px 4px 0;
                          cursor: pointer;
                        "
                      >
                        <i class="fa fa-search" style="padding: 8px"></i>
                      </button>
                    </form>
                  </li>
                </ul>
              </div>
            </div>
          </div>

