                    <a
                      href="/filter?category=<%= category[i]._id %>&sort=<%= sort %>"
                    >
                      <%= category[i].name %>
                    </a>
                  </li>
                  <% } %>
                </ul>
              </div>
            </div>
            <button id="change-button" hidden>Apply Change</button>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- shop-area end -->
</main>
